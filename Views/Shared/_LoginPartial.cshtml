@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span class="text-warning">Hola! @User.Identity.Name!</span></a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link active btn btn-link text-danger"><i class="fas fa-times-circle"></i></button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark active font-weight-bold" asp-area="Identity" asp-page="/Account/Login"><i class="far fa-user-circle"></i></a>
            </li>
        }
    </ul>
