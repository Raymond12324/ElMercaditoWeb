@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-lg-4  card d-flex ml-auto mr-auto mt-2 shadow">
        <section>
            <form id="account" method="post" class="p-5">
                <h4>Iniciar session</h4>
                <hr />
                
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Recordarme?
                        </label>
                    </div>
                </div>
                <div class="form-group mt-n2">
                    <button type="submit" class="btn btn-warning shadow">Iniciar session</button>
                </div>
                <hr/>
                <div class="form-group mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                    </p>
                   
                </div>
            </form>
        </section>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
