@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


    <div class="container">
        <div class="row">
            <div class=" col-lg-4 text-center card  ml-auto mr-auto mt-5 shadow-lg">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="p-4">
                    <h3>Crear nueva cuenta</h3>
                    <hr />

                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" placeholder="Ejemplo@algo.com" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Contraseña</label>
                        <input asp-for="Input.Password" placeholder="********" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                        <input asp-for="Input.ConfirmPassword" placeholder="*********" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-warning shadow">Registrarse</button>
                </form>
            </div>

            <div class="col-md-8 mt-5">
                
                <div class="jumbotron bg-transparent border shadow">

                    <h1 class="display-4">Funciones especiales</h1>
                    <hr />
                    <p class="lead">Cuendo te registras puedes acceder a las funciones de de compras en linea y de pedido de productos.</p>
                    <ul>
                        <li><img src="https://image.flaticon.com/icons/svg/1828/1828592.svg" height="30" /> Compras en linea</li>
                        <li><img src="https://image.flaticon.com/icons/svg/1828/1828592.svg" height="30" /> Entregas a tu hogar</li>
                    </ul>
                    <hr>

                </div>
            </div>

        </div>

        
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
